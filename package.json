{
  "name": "geniusgarage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "turbo:dry-run": "echo '' &&  turbo build --dry-run",
    "turbo:list": "echo 'Verify the package is recognized' && pnpm list --depth 0",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.4"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=24.11.1"
  }
}
